/* pages/detail/detail.wxss */

.text-block{
  margin:20rpx 50rpx;
  text-align: center;
  font-size: 35rpx;
}
.title-block{
  padding: 30rpx 30rpx;
  text-align: center;
  font-size: 35rpx;
}

.keyword{
  text-decoration: underline;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

page {
  width:100%;
  height:100%;
}

.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}

.header{
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
  text-align:center;
  font-size:120%;
}


.header2{
  line-height: 60rpx;
  flex: 0 0 60rpx; /* 不放大不缩小固定100rpx */
  text-align:center;
}



.main{
  flex: 1;
  position: relative;
}

.poem{
  font-size:120%;
  text-align:center;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  flex-wrap: wrap;
  text-align: center;
  justify-content: space-between;
  margin-left: 10vw;
  margin-right: 10vw;
}

::-webkit-scrollbar 
{ 
width: 0; 
height: 0; 
color: transparent; 
} 

.footer{
  height: 200rpx;
  padding: 50rpx 30rpx 150rpx 30rpx;
  background:none;
  font-size:35rpx;
  color: brown;
}