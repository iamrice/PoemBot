/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  
}

.save{
  width: 650rpx;
  height: 80rpx;
  background: #f3ebb2;
  color: rgb(27, 27, 27);
  font-size: 32rpx;
  border-radius: 20rpx;
  margin:50rpx;
  text-align: center;
}

.baocun{
  width: 300rpx;
  height: 80rpx;
  float: left;
  margin: 20rpx 50rpx 50rpx 25rpx;
  text-align: center;
  background-color: rgb(214, 187, 114);
  color: rgb(27, 27, 27);
  font-size: 32rpx;
  border-radius: 20rpx;
}

.baocun.left{
  margin: 20rpx 25rpx 50rpx 50rpx;
}

.imageShow{
  width: 650rpx;
  height: 1000rpx;
  margin: 50rpx 50rpx 0rpx 50rpx;
}

.imageBox{
  width: 750rpx;
  background: rgba(0,0,0,0.7);
}

.button_image{
  align-content: center;
  justify-content: center;
  max-width:100%;
  max-height:100%;
}

.smallbutton{
  text-align: center;
  float: left;
  width: 240rpx;
  height:80rpx;
  background-color: rgb(214, 187, 114);
  border:none;
  justify-content:center;
  padding: 8rpx 24rpx
}

.smallbutton.first{
  margin: 80rpx 20rpx 30rpx 115rpx;
}

.smallbutton.second{
  margin: 80rpx 115rpx 30rpx 20rpx;
  padding: 4rpx 12rpx;
}

.smallbutton.third{
  margin: 0rpx 20rpx 80rpx 115rpx;
}

.smallbutton.fourth{
  margin: 0rpx 115rpx 80rpx 20rpx;
}

.upload-button{
  text-align: center;
  width: 288rpx;
  height:96rpx;
  background-color: rgb(214, 187, 114);
  border:none;
  justify-content:center;
}

.content-block{
  padding: 5rpx 50rpx;
  text-align: center;
}

.user-image-block{
  padding:  50rpx 50rpx;
}

.image-block{
  padding:  50rpx 20rpx;
  width: 710rpx;
}

.title-block{
  margin:10rpx 80rpx;
  text-align: right;
}

.text-block{
  margin:280rpx 20rpx 30rpx 30rpx;
  text-indent: 40rpx;
  
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.button1{
  margin:20rpx 25rpx;
  left:45rpx;
  float:left;
  width: 180rpx;
  font-size: 28rpx;
  background-color: rgb(248, 233, 147);
}

.button2{
  width: 400rpx;
  border: none;
  background: none;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #ced3d8;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #4d4531;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#7c8085, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}
